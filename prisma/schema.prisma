generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Staff {
  id            Int        @id @default(autoincrement())
  staffId       String     @unique
  firstName     String?
  lastName      String?
  designation   String?
  gender        GenderEnum
  joinedDate    String?
  dob           String?
  addressLine1  String?
  addressLine2  String?
  addressLine3  String?
  addressLine4  String?
  addressLine5  String?
  contactNumber String?
  email         String     @unique
  role          RoleEnum
}

model Field {
  id            Int     @id @default(autoincrement())
  fieldCode     String  @unique
  fieldName     String
  fieldLocation String
  extentSize    Int
  fieldImage1   String?
  fieldImage2   String?
}

model Equipment {
  id            Int     @id @default(autoincrement())
  equipmentCode String  @unique
  equipmentName String
  equipmentType String
  status        String
  fieldCode     String?
  staffCode     String?
}

model Crop {
  id                 Int    @id @default(autoincrement())
  cropCode           String @unique
  cropCommonName     String
  cropScientificName String
  cropImage          String
  category           String
  cropSeason         String
  fieldCode          String
}

model Vehicle {
  id                 Int    @id @default(autoincrement())
  vehicleCode        String @unique
  licensePlateNumber Int
  vehicleCategory    String
  fuelType           String
  status             String
  staffId            String
  remarks            String
}

enum GenderEnum {
  MALE
  FEMALE
  OTHER
}

enum RoleEnum {
  ADMIN
  MANAGER
  EMPLOYEE
}
