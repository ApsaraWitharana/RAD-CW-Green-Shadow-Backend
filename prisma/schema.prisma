generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Staff {
  id            Int         @id @default(autoincrement())
  firstName     String?
  lastName      String?
  designation   String?
  gender        GenderEnum?
  joinedDate    String?
  dob           String?
  addressLine1  String?
  addressLine2  String?
  addressLine3  String?
  addressLine4  String?
  addressLine5  String?
  contactNumber String?
  email         String      @unique
  role          RoleEnum?
}

enum GenderEnum {
  MALE
  FEMALE
  OTHER
}

enum RoleEnum {
  ADMIN
  MANAGER
  EMPLOYEE
}
